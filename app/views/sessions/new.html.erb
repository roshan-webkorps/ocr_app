<div class="login-page">
  <div class="login-container">
    <div class="login-card">
      <div class="login-header">
        <h1>OCR Document Processor</h1>
        <p>Sign in to access your documents and manage OCR processing</p>
      </div>
      
      <%= form_with url: login_path, local: true, class: "login-form" do |form| %>
        <div class="form-group">
          <%= form.label :email, "Email Address", class: "form-label" %>
          <%= form.email_field :email, 
                               required: true, 
                               class: "form-input", 
                               placeholder: "Enter your email address",
                               value: params[:email] %>
        </div>
        
        <div class="form-group">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, 
                                  required: true, 
                                  class: "form-input", 
                                  placeholder: "Enter your password" %>
        </div>
        
        <div class="form-group">
          <%= form.submit "Sign In", class: "btn btn-primary btn-large login-btn" %>
        </div>
      <% end %>
  </div>
</div>
